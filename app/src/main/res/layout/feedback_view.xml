<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <!-- android:layout_gravity="center_vertical" -->

    <ImageView
        android:id="@+id/feedback_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/feedback_top" />

    <TextView
        android:id="@+id/feedback_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback_title_text">
    </TextView>

    <EditText
        android:id="@+id/feedback_text"
        android:layout_height="wrap_content"
        android:hint="@string/feedback_title_text"
        android:inputType="textMultiLine"
        android:lines="10"
        android:scrollbarStyle="insideInset"
        android:scrollbars = "vertical"
        android:layout_width="match_parent">
    </EditText>

    <Button
        android:id="@+id/feedback_send_button"
        android:layout_height="wrap_content"
        android:text="@string/feedback_send"
        android:layout_width="match_parent">
    </Button>

</LinearLayout>